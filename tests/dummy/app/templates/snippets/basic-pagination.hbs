{{#d-pagination
        table=table as |p|}}
    {{#d-table class="table table-striped" table=p.table as |dtab|}}
        <thead class="thead-dark">
        <tr>
            {{#each dtab.columns as |col|}}
                <th scope="col">{{col.key}}</th>
            {{/each}}
        </tr>
        </thead>
        {{d-tbody d-table=dtab}}
    {{/d-table}}
    <nav aria-label="Page navigation">
        <ul class="pagination">
            <li class="page-item">
                <a class="page-link" href="#" {{action (mut p.pagination.currentPage) 1}}>
                    First
                </a></li>
            <li class="page-item">
                <a class="page-link" href="#" {{action p.pagination.changePrevious}}>
                    Previous
                </a></li>
            <li class="page-item">
                {{input class="page-link" name="pn" size="4" value=p.pagination.currentPage}}
            </li>
            <li class="page-item">
                {{input class="page-link" name="pn" size="4" value=p.pagination.pageSize}}
            </li>
            <li class="page-item">
                <a class="page-link" href="#" {{action p.pagination.changeNext}}>
                    Next
                </a></li>
            <li class="page-item">
                <a class="page-link" href="#" {{action (mut p.pagination.currentPage)
                                                       p.pagination.lastPage}}>
                    Last
                </a></li>
        </ul>
    </nav>
{{/d-pagination}}